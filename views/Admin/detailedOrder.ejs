<script>
    async function changeStatus(OrderId) {
        try {
            const action = document.getElementById('orderStatusSelect').value;
            const response = await fetch(`/admin/changeStatus/${OrderId}`, {
                method: 'put',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ action: action })
            });
            const data = await response.json();

            
            location.reload(); 

        } catch (error) {
            console.error('Error:', error);
        }
    }
</script>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const orderStatus = '<%= orderDetails.status %>'; // Get the order status from the server-side variable

        if (orderStatus === 'Returned' || orderStatus === 'Canceled') {
            document.getElementById('refundButtonContainer').style.display = 'block';
        } else {
            document.getElementById('refundButtonContainer').style.display = 'none';
        }
    });
</script>
    
<script>
    const userId = '<%= userId %>'; // Assuming userId is a string
    console.log('User ID:', userId);

    function refund(event) {
    event.preventDefault(); // Prevent the default behavior of the anchor tag
    const totalAmount = parseFloat('<%= totalAmount %>');
    console.log("Total Amount:", totalAmount);

    const xhr = new XMLHttpRequest();
    xhr.open('POST', '/refund', true);
    xhr.setRequestHeader('Content-Type', 'application/json');
    xhr.onreadystatechange = function() {
        if (xhr.readyState === XMLHttpRequest.DONE) {
            if (xhr.status === 200) {
                console.log('Refund successful');
            } else {
                console.error('Error:', xhr.responseText);
            }
        }
    };
    xhr.send(JSON.stringify({ totalAmount: totalAmount, userId: userId }));
}

</script>

<script>
    // Assume orderStatus is fetched from the database
    const orderStatus = "<%= orderDetails.status %>";

    function toggleElements() {
        const orderStatusSelect = document.getElementById("orderStatusSelect");
        const saveButton = document.getElementById("saveButton");
        const statusDisplay = document.getElementById("statusDisplay");

        if (orderStatus === "Canceled") {
            orderStatusSelect.disabled = true;
            saveButton.style.display = "none";
            statusDisplay.style.display = "inline";
        } else {
            orderStatusSelect.disabled = false;
            saveButton.style.display = "inline-block";
            statusDisplay.style.display = "none";
        }
    }

    // Call toggleElements to set initial state
    toggleElements();
</script>
