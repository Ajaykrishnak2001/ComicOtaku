    <script>
        // Function to limit the number of files selected
        function limitFiles(input, maxFiles) {
            var files = input.files;
            if (files.length > maxFiles) {
                alert("You can only upload a maximum of " + maxFiles + " files.");
                input.value = "";
            }
        }

        // Event listener for the price input to disallow negative numbers
        document.getElementById("productPrice").addEventListener("input", function () {
            var priceInput = document.getElementById("productPrice");
            var price = parseFloat(priceInput.value);
            if (isNaN(price) || price < 0) {
                alert("Please enter a valid, non-negative price.");
                priceInput.value = "";
            }
        });

        
        function previewImages(input) {
    var preview = document.getElementById("imagePreview");
    preview.innerHTML = ""; // Clear existing preview

    if (input.files) {
        for (var i = 0; i < input.files.length; i++) {
            var reader = new FileReader();
            reader.onload = function (e) {
                var img = document.createElement("img");
                img.src = e.target.result;
                img.style.maxWidth = "100px";
                img.style.marginRight = "10px";

                var deleteBtn = document.createElement("button");
                deleteBtn.innerHTML = "Delete";
                deleteBtn.className = "btn btn-sm btn-danger";
                deleteBtn.style.marginBottom = "10px";
                deleteBtn.onclick = function () {
                    var index = images.indexOf(img.src); // Get the index of the image
                    if (index !== -1) {
                        images.splice(index, 1); // Remove the image from the array
                    }
                    this.parentNode.remove(); // Remove the image preview
                    input.value = null; // Clear the file input value to allow re-uploading the same file
                };

                var div = document.createElement("div");
                div.appendChild(img);
                div.appendChild(deleteBtn);
                preview.appendChild(div);

                images.push(img.src); // Add the image src to the array
            };
            reader.readAsDataURL(input.files[i]);
        }
    }
}
