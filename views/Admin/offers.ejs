<script>
    $(document).ready(function() {
        // Add offer price
        $('.add-offer-price').click(function() {
            const productId = $(this).prev().data('product-id');
            const offerPrice = $(this).prev().val();

            $.ajax({
                url: '/admin/updateOfferPrice',
                method: 'POST',
                data: { productId: productId, offerPrice: offerPrice },
                success: function(response) {
                    if (response.success) {
                        console.log('Offer price updated successfully');
                        location.reload();
                        // You can update the UI or display a message here
                    } else {
                        console.error('Failed to update offer price');
                        // Handle error case
                    }
                },
                error: function(err) {
                    console.error('Internal server error');
                    // Handle error case
                }
            });

            // Show the edit button
            $(this).next('.edit-offer-price').show();
        });

        // Edit offer price
        $('.edit-offer-price').click(function() {
            const productId = $(this).data('product-id');
            const offerPrice = $(this).data('offer-price');

            // Populate the modal with current offer price
            $('#editOfferModal').modal('show');
            $('#editOfferModal').find('#productId').val(productId);
            $('#editOfferModal').find('#newOfferPrice').val(offerPrice);
        });

        // Submit edited offer price
        $('#editOfferForm').submit(function(e) {
            e.preventDefault();
            const productId = $(this).find('#productId').val();
            const newOfferPrice = $(this).find('#newOfferPrice').val();

            $.ajax({
                url: '/admin/editOfferPrice',
                method: 'POST',
                data: { productId: productId, newOfferPrice: newOfferPrice },
                success: function(response) {
                    if (response.success) {
                       
                        console.log('Offer price edited successfully');
                        // You can update the UI or display a message here
                        $('#editOfferModal').modal('hide');
                        location.reload();
                    } else {
                        console.error('Failed to edit offer price');
                        // Handle error case
                    }
                },
                error: function(err) {
                    console.error('Internal server error');
                    // Handle error case
                }
            });
        });
    });
</script>

<script>function applyDiscount(index) {
    const discountPercentage = document.getElementById(`discountPercentage_${index}`).value;
    const categoryId = document.querySelector(`#discountForm_${index} [name="categoryId"]`).value;

    fetch(`/admin/applyDiscount/${categoryId}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify({ discountPercentage })
    })
    .then(response => {
        if (response.ok) {
            alert('Discount applied successfully');
            window.location.reload(); // Reload the page to see updated prices
        } else {
            alert('Failed to apply discount');
        }
    })
    .catch(error => {
        console.error('Error:', error);
        alert('An error occurred. Please try again.');
    });
}
</script>

