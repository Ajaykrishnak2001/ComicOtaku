    <style>
        /* Hide the radio button */
        .custome-radio input[type="radio"] {
            display: none;
        }

        /* Style the label to look like a button */
        .custome-radio label {
            display: inline-block;
            padding: 10px 20px;
            background-color: #f8f9fa;
            color: #495057;
            border: 1px solid #ced4da;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s, color 0.3s, border-color 0.3s;
        }

        /* Change label background color on hover */
        .custome-radio label:hover {
            background-color: #e9ecef;
        }

        /* Change label styles when radio button is checked */
        .custome-radio input[type="radio"]:checked+label {
            background-color: #007bff;
            color: #fff;
            border-color: #007bff;
        }

        /* Collapse the content when radio button is not checked */
        .collapse:not(.show) {
            display: none;
        }

        /* Additional styles for the collapsed content */
        .collapse {
            margin-top: 10px;
            padding: 10px;
            border: 1px solid #ced4da;
            border-radius: 5px;
            background-color: #f8f9fa;
        }
    </style>
