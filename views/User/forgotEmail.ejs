
    <main class="main">
        <section class="content-main mt-0 mb-80">
        <div class="card mx-auto card-login">
            <div class="card-body">
                <h4 class="card-title mb-4">Sign in</h4>
                <% if (typeof message !== 'undefined') { %>
                    <p style="color: green;"><%= message %></p>
                <% } %>
                <form id="loginForm" action="/forgototp" method="POST">
                    <div class="mb-3">
                        <input class="form-control" required=""  name="email" placeholder="Enter email" type="email">
                        <span id="emailError" class="error"></span>
                    </div>
                    <div class="mb-4">
                        <button type="submit" class="btn btn-primary w-100"> Submit </button>
                    </div>
                </form>
            </div>
        </div>
    </section>
    </main>
       